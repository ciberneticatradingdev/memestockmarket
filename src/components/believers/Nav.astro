---
import { CA, tg, dex, raydium, jupiter } from '../../utils/utils';
---

<section class="bg-black/10 flex flex-col sm:flex-row items-center justify-between p-4 rounded-[50px] py-3 w-full max-w-4xl mx-auto my-8">
    <div class="flex flex-col sm:flex-row items-center w-full justify-between relative">
      <div class="flex justify-between w-full sm:w-auto items-center">
        <img src="/gtrump/gtrump.png" class="max-w-32" />
        <button id="menu-toggle" class="sm:hidden text-white p-2">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path id="menu-icon" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
          </svg>
        </button>
      </div>
      
      <!-- Navigation Links -->
      <nav id="nav-menu" class="hidden sm:flex flex-col sm:flex-row gap-8 mt-4 sm:mt-0 text-white w-full sm:w-auto">
        <a href="/" class="text-white transition-colors hover:no-underline">Home</a>
        <a href="#contract" class="text-white transition-colors hover:no-underline">Contract Address</a>
        <a href={tg} target="_blank" class="text-white transition-colors hover:no-underline">Telegram</a>
      </nav>

      <a href={raydium} class="bg-white text-[#0000ce] px-6 py-2 rounded-[50px] font-bold mt-4 sm:mt-0 transition-colors hover:no-underline w-full sm:w-auto text-center">
        Buy Now
      </a>
    </div>
</section>

<style>
  @media (max-width: 640px) {
    #nav-menu {
      position: absolute;
      top: 100%;
      left: 0;
      right: 0;
      background: #1B1B1B;
      padding: 1rem;
      border-radius: 1rem;
      z-index: 50;
    }
    
    #nav-menu.show {
      display: flex;
    }
  }
</style>

<script>
  const menuToggle = document.getElementById('menu-toggle');
  const navMenu = document.getElementById('nav-menu');

  menuToggle?.addEventListener('click', () => {
    navMenu?.classList.toggle('show');
  });

  // Close menu when clicking outside
  document.addEventListener('click', (event) => {
    const target = event.target as HTMLElement;
    if (!target.closest('#menu-toggle') && !target.closest('#nav-menu')) {
      navMenu?.classList.remove('show');
    }
  });
</script>