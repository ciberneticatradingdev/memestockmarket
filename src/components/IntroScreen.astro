<div id="intro-screen" class="fixed inset-0 z-50 flex flex-col items-center justify-center py-12 px-4 md:px-8 bg-gradient-to-b from-blue-900 to-blue-700 transition-opacity duration-500">
  <!-- Background Video for Intro -->
  <div class="fixed inset-0 z-0 overflow-hidden">
    <video autoplay loop muted playsinline class="absolute inset-0 w-full h-full object-cover opacity-30">
      <source src="/bg.MP4" type="video/mp4">
    </video>
  </div>
  
  <!-- Entry Content -->
  <div class="z-10 text-center flex flex-col items-center">
    <!-- <div class="mb-8">
      <img src="/mememarket-logo.png" alt="Meme Market Logo" class="w-64 h-auto mx-auto" onerror="this.src='/gtrump/gtrump.png'; this.onerror=null;" />
    </div> -->
    
    <h1 class="text-4xl md:text-6xl font-bold text-white mb-4 glow-text">ACCESS RESTRICTED</h1>
    <h2 class="text-2xl md:text-3xl font-bold text-blue-300 mb-8 glow-text-blue">MEME TRADERS ONLY</h2>
    
    <button id="enter-button" class="enter-button bg-blue-600 hover:bg-blue-500 text-white font-bold py-4 px-8 rounded-lg text-xl transition-all duration-300 transform hover:scale-105 flex items-center justify-center">
      <span>ENTER MEME STOCK MARKET</span>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
      </svg>
    </button>
  </div>
</div>

<style>
  .glow-text {
    text-shadow: 0 0 10px rgba(255, 255, 255, 0.7), 0 0 20px rgba(255, 255, 255, 0.5);
  }
  
  .glow-text-blue {
    text-shadow: 0 0 10px rgba(147, 197, 253, 0.7), 0 0 20px rgba(147, 197, 253, 0.5);
  }
  
  .enter-button {
    box-shadow: 0 0 15px rgba(37, 99, 235, 0.7);
  }
  
  @keyframes pulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.05); }
  }
  
  .enter-button {
    animation: pulse 2s infinite;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const introScreen = document.getElementById('intro-screen');
    const enterButton = document.getElementById('enter-button');
    
    enterButton?.addEventListener('click', () => {
      // Add fade-out animation
      introScreen?.classList.add('opacity-0');
      
      // Start background music
      const music = document.getElementById('background-music') as HTMLAudioElement;
      if (music) {
        music.play().catch(error => {
          console.error("Audio play failed:", error);
        });
      }
      
      // After animation completes, hide the intro screen
      setTimeout(() => {
        if (introScreen) {
          introScreen.style.display = 'none';
        }
      }, 500);
      
      // Dispatch a custom event to notify that the intro screen has been dismissed
      document.dispatchEvent(new CustomEvent('introScreenDismissed'));
    });
  });
</script>
