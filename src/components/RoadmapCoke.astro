<style>
  .animate-bubble {
    animation: bubble 2s infinite;
  }

  @keyframes bubble {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-100%);
    }
  }

  .bubble-sm, .bubble-md, .bubble-lg, .bubble-xl {
    @apply absolute rounded-full bg-white/20;
    animation: float-up 8s infinite;
  }

  .bubble-sm {
    @apply w-4 h-4;
    left: 15%;
    animation-delay: 0s;
  }

  .bubble-md {
    @apply w-6 h-6;
    left: 85%;
    animation-delay: 2s;
  }

  .bubble-lg {
    @apply w-8 h-8;
    left: 25%;
    animation-delay: 4s;
  }

  .bubble-xl {
    @apply w-10 h-10;
    left: 75%;
    animation-delay: 6s;
  }

  @keyframes float-up {
    0% {
      transform: translateY(100vh) scale(0);
      opacity: 0;
    }
    50% {
      opacity: 0.8;
      transform: translateY(50vh) scale(1);
    }
    100% {
      transform: translateY(-100px) scale(0);
      opacity: 0;
    }
  }
</style>
